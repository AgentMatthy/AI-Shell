/* AI Shell Textual CSS Styles */

/* Main application layout */
AIShellApp {
    background: $background;
}

/* Tab bar styling */
TabbedContent {
    height: 100%;
}

Tabs {
    height: 3;
    dock: top;
}

Tab {
    padding: 0 1;
    color: $text-muted;
    background: $panel;
}

Tab:hover {
    color: $text;
    background: $boost;
}

Tab.-active {
    color: $primary;
    background: $boost;
    text-style: bold;
}

/* Main conversation container */
.conversation-container {
    height: 100%;
}

/* Message list styling */
.message-list {
    height: 1fr;
    dock: top;
    scrollbar-background: $panel;
    scrollbar-color: $primary;
    scrollbar-color-hover: $primary-lighten-1;
    scrollbar-color-active: $primary-lighten-2;
}

MessageWidget {
    margin: 0 1 1 1;
    padding: 1;
    background: $surface;
    border: solid $border;
}

.user-message {
    background: $primary 20%;
    border: solid $primary;
}

.assistant-message {
    background: $success 20%;
    border: solid $success;
}

.system-message {
    background: $warning 20%;
    border: solid $warning;
}

.error-message {
    background: $error 20%;
    border: solid $error;
}

.command-message {
    background: $secondary 20%;
    border: solid $secondary;
}

/* Input area styling */
.input-container {
    height: 8;
    dock: bottom;
    background: $panel;
    border-top: solid $border;
}

.input-area {
    height: 6;
    margin: 1;
    padding: 1;
    background: $surface;
    border: solid $border;
}

.input-area:focus {
    border: solid $primary;
}

/* Buttons */
.send-button {
    width: 12;
    height: 3;
    margin: 1 1 1 0;
    background: $primary;
    color: $text-primary;
}

.send-button:hover {
    background: $primary-lighten-1;
}

.clear-button {
    width: 12;
    height: 3;
    margin: 1 0 1 1;
    background: $warning;
    color: $text-warning;
}

.clear-button:hover {
    background: $warning-lighten-1;
}

/* Status bar */
.status-bar {
    height: 1;
    dock: bottom;
    background: $panel;
    color: $text-muted;
    padding: 0 1;
}

/* Model selector */
.model-selector {
    width: 25;
    height: 3;
    margin: 1;
}

/* Command confirmation dialog */
ConfirmDialog {
    align: center middle;
    background: $surface 60%;
}

.dialog-content {
    width: 60;
    height: 15;
    background: $surface;
    border: solid $primary;
    padding: 1;
}

.dialog-title {
    height: 1;
    text-style: bold;
    color: $primary;
    text-align: center;
}

.dialog-message {
    height: 1fr;
    margin: 1 0;
}

.dialog-buttons {
    height: 3;
    dock: bottom;
}

.dialog-button {
    width: 1fr;
    height: 3;
    margin: 0 1;
}

.confirm-button {
    background: $success;
    color: $text-success;
}

.cancel-button {
    background: $error;
    color: $text-error;
}

/* Help dialog */
HelpDialog {
    align: center middle;
    background: $surface 60%;
}

.help-content {
    width: 80;
    height: 30;
    background: $surface;
    border: solid $primary;
    padding: 1;
}

/* Conversation list dialog */
ConversationListDialog {
    align: center middle;
    background: $surface 60%;
}

.conversation-list-content {
    width: 70;
    height: 25;
    background: $surface;
    border: solid $primary;
    padding: 1;
}

/* Loading indicators */
.loading {
    text-style: italic;
    color: $text-muted;
}

/* Markdown styling overrides */
Markdown {
    margin: 0;
    padding: 0;
}

/* Code blocks in markdown */
MarkdownCodeBlock {
    background: $panel;
    color: $text;
    border: solid $border;
    margin: 1 0;
    padding: 1;
}

/* Inline code */
MarkdownInlineCode {
    background: $panel;
    color: $text;
    padding: 0 1;
}

/* Links */
MarkdownLink {
    color: $primary;
}

/* Headers */
MarkdownH1 {
    text-style: bold;
    color: $primary;
    margin: 1 0;
}

MarkdownH2 {
    text-style: bold;
    color: $secondary;
    margin: 1 0;
}

MarkdownH3 {
    text-style: bold;
    margin: 1 0;
}

/* Lists */
MarkdownList {
    margin: 1 0;
}

/* Blockquotes */
MarkdownBlockQuote {
    background: $panel;
    border-left: solid $primary;
    padding: 1;
    margin: 1 0;
}

